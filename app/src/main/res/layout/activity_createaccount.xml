<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textCreateAccount"
        android:layout_width="207dp"
        android:layout_height="56dp"
        android:text="@string/create_account"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/save"
        android:onClick="clickSaveAccount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="49dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="365dp"
        android:layout_height="233dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textCreateAccount"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/textAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/userTextAccountName"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.434" />

        <EditText
            android:id="@+id/userTextAccountName"
            android:layout_width="169dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textAccountContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_contact"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/userTextAccountContact"
            android:layout_marginRight="8dp"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/textAccountName"
            app:layout_constraintHorizontal_bias="0.523" />

        <EditText
            android:id="@+id/userTextAccountContact"
            android:layout_width="169dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userTextAccountName" />

        <TextView
            android:id="@+id/textAccountPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_phone"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/userTextAccountPhone"
            android:layout_marginRight="8dp"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/textAccountContact"
            app:layout_constraintHorizontal_bias="0.255" />

        <EditText
            android:id="@+id/userTextAccountPhone"
            android:layout_width="169dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="Phone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userTextAccountContact" />

        <TextView
            android:id="@+id/textAccountAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginLeft="41dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textAccountPhone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/userTextAccountAddress"
            android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.487"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/userTextAccountAddress"
            android:layout_width="169dp"
            android:layout_height="43dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userTextAccountPhone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>