<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textCreateAccount"
        android:layout_width="207dp"
        android:layout_height="56dp"
        android:text="@string/create_account"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/save"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="456dp"
        android:layout_height="153dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCreateAccount">

        <TextView
            android:id="@+id/textAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textAccountContact"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textAccountContact"
            android:layout_marginTop="24dp"
            android:text="@string/account_name" />

        <TextView
            android:id="@+id/textAccountContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textAccountName"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="@string/account_contact" />

        <TextView
            android:id="@+id/textAccountPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textAccountContact"
            android:layout_alignStart="@+id/textAccountContact"
            android:layout_below="@+id/textAccountContact"
            android:layout_marginTop="19dp"
            android:text="@string/account_phone" />

        <TextView
            android:id="@+id/textAccountAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textAccountPhone"
            android:layout_alignStart="@+id/textAccountPhone"
            android:layout_below="@+id/textAccountPhone"
            android:layout_marginTop="20dp"
            android:text="@string/account_address" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>